<mvc:View
    controllerName="template.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Page title="Usuarios">
        <VBox>
            <Table
                id="userTable"
                items="{/users}"
                mode="SingleSelectMaster"
                selectionChange="onSelectionChange"
            >
                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>
                    <Column>
                        <Text text="Nombre" />
                    </Column>
                    <Column>
                        <Text text="Email" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                    >
                        <cells>
                            <Text text="{id}" />
                            <Text text="{name}" />
                            <Text text="{email}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>
