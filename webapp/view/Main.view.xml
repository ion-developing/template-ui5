<mvc:View
	controllerName="template.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'template/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="page">
		<content>
			  <VBox>
                    <HBox>
                        <Input id="newTaskInput" placeholder="Nueva tarea..." />
                        <Button text="Agregar" press="onAddTask" />
                    </HBox>
                    <List id="taskList" items="{/tasks}">
                        <items>
                            <CustomListItem>
                                <HBox>
                                    <CheckBox selected="{completed}" select="onToggleComplete" />
                                    <Text text="{title}" />
                                    <Button icon="sap-icon://delete" press="onDeleteTask" />
                                </HBox>
                            </CustomListItem>
                        </items>
                    </List>
                </VBox>
		</content>
	</Page>

</mvc:View>
